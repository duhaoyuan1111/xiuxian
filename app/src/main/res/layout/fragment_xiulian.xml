<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".XiuLianFragment"
    android:background="@drawable/home_bg">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".PendingFriendsFragment">

        <Button
            android:id="@+id/back_btn_XiuLianFrag"
            android:layout_width="60dp"
            android:layout_height="38dp"
            android:background="@drawable/back_btn"
            app:layout_constraintTop_toBottomOf="@id/tupo_bg_iv_XiuLianFrag"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintHorizontal_bias="0.8"
            />

        <TextView
            android:id="@+id/speed_tv_XiuLianFrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修炼速度："
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/current_level_tv_XiuLianFrag"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.2"

            />


        <TextView
            android:id="@+id/current_level_tv_XiuLianFrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前阶段："
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/xiulianzhi_tv_XiuLianFrag"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/speed_tv_XiuLianFrag"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/xiulianzhi_tv_XiuLianFrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修炼值："
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/current_level_tv_XiuLianFrag"
            app:layout_constraintBottom_toTopOf="@id/tupo_bg_iv_XiuLianFrag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.1"
            app:layout_constraintHorizontal_bias="0.3"

            />

        <TextView
            android:id="@+id/num_speed_tv_XiuLianFrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="null / 分钟"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/num_level_tv_XiuLianFrag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintHorizontal_bias="0.65"
            />

        <TextView
            android:id="@+id/num_level_tv_XiuLianFrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="null"
            android:textColor="@color/black"
            android:textSize="20sp"
            app:layout_constraintBottom_toTopOf="@id/num_xiulianzhi_tv_XiuLianFrag"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.65"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/num_speed_tv_XiuLianFrag"
            app:layout_constraintVertical_bias="0.4" />

        <TextView
            android:id="@+id/num_xiulianzhi_tv_XiuLianFrag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" / 10"
            android:textSize="20sp"
            android:textColor="@color/black"
            app:layout_constraintTop_toBottomOf="@id/num_level_tv_XiuLianFrag"
            app:layout_constraintBottom_toTopOf="@id/tupo_bg_iv_XiuLianFrag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.2"
            app:layout_constraintHorizontal_bias="0.65"
            />

        <Button
            android:id="@+id/tupo_btn_XiuLianFrag"
            android:layout_width="90dp"
            android:layout_height="50dp"
            app:layout_constraintTop_toBottomOf="@id/xiulianzhi_tv_XiuLianFrag"
            app:layout_constraintBottom_toTopOf="@id/back_btn_XiuLianFrag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.5"
            app:layout_constraintHorizontal_bias="0.5"
            android:background="@drawable/tupo_btn"
            />

        <ImageView
            android:id="@+id/tupo_bg_iv_XiuLianFrag"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:src="@drawable/tupo_bg2"
            app:layout_constraintTop_toBottomOf="@id/xiulianzhi_tv_XiuLianFrag"
            app:layout_constraintBottom_toTopOf="@id/back_btn_XiuLianFrag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.65"
            app:layout_constraintHorizontal_bias="0.5"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>